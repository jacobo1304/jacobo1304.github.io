---
interface Project {
  title: string;
  imageSrc: string;
  link: string;
  preview: string;
  trailer?: string;
  status: string;
}

const projects: Project[] = [
  {
    title: "Desparcha 2-3-4",
    imageSrc: "/Desparcha2-3-4.png",
    link: "https://jacobo1304.itch.io/desparcha234",
    preview: "https://jacobo1304.itch.io/desparcha234",
    trailer: "",
    status: "Beta",
  },
  {
    title: "Klondike Dig",
    imageSrc: "/KlondikeDig.png",
    link: "https://jacobo1304.itch.io/klondike-miner",
    preview: "https://jacobo1304.itch.io/klondike-miner",
    trailer: "",
    status: "Beta",
  },
  {
    title: "MasKeeper",
    imageSrc: "/MasKeeper.png",
    link: "https://jsm269.itch.io/maskeeper",
    preview: "https://jsm269.itch.io/maskeeper",
    trailer: "",
    status: "Alpha",
  },
  {
    title: "Training Train",
    imageSrc: "/TrainingTrainportada1.png",
    link: "https://jacobo1304.github.io/Training-Train/",
    preview: "https://jacobo1304.github.io/Training-Train/",
    trailer: "",
    status: "Depolyed",
  },
];
---

<section
  id="projects"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">My work</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Projects</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        projects.map((project) => (
          <div class="group">
            <a
              href={project.preview}
              target="_blank"
              rel="noopener noreferrer"
              class="block"
            >
              <div class="rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 mb-4">
                <img
                  src={project.imageSrc}
                  alt={project.title}
                  class="w-full h-48 md:h-72 object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                  decoding="async"
                />
              </div>
            </a>

            <div class="flex items-center px-3">
              <a
                href={project.preview}
                target="_blank"
                rel="noopener noreferrer"
                class="flex-grow"
              >
                <h4 class="text-2xl font-semibold">{project.title}</h4>
                <span class="py-1 text-sm text-[var(--white-icon)]">
                  {project.status}
                </span>
              </a>
              <div class="flex gap-2 ml-auto">
                <a
                  target="_blank"
                  href={project.link}
                  aria-label="Source"
                  class="size-14 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    class="size-7"
                  >
                    <path d="M24 12L18.3431 17.6569L16.9289 16.2426L21.1716 12L16.9289 7.75736L18.3431 6.34315L24 12ZM2.82843 12L7.07107 16.2426L5.65685 17.6569L0 12L5.65685 6.34315L7.07107 7.75736L2.82843 12ZM9.78845 21H7.66009L14.2116 3H16.3399L9.78845 21Z" />
                  </svg>
                </a>

                {
                  project.trailer ? (
                    <a
                      target="_blank"
                      href={project.trailer}
                      aria-label="Trailer"
                      class="size-14 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        class="size-7"
                      >
                        <path d="M9 7.5V16.5L16.5 12L9 7.5Z" />
                      </svg>
                    </a>
                  ) : (
                    <div
                      aria-label="Trailer (soon)"
                      class="size-14 flex justify-center items-center text-[var(--white-icon)] border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] opacity-40 cursor-not-allowed"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        class="size-7"
                      >
                        <path d="M9 7.5V16.5L16.5 12L9 7.5Z" />
                      </svg>
                    </div>
                  )
                }
              </div>
            </div>
          </div>
        ))
      }
    </div>
    <a
      target="_blank"
      href="https://jacobo1304.itch.io"
      aria-label="Itch.io"
      class="w-full flex items-center justify-center gap-2 mt-9 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-full bg-[#1414149c] hover:bg-[var(--white-icon-tr)] hover:scale-105"
    >
      <span class="md:text-lg text-md">More Games here!</span>
     
    </a>
  </div>
</section>
